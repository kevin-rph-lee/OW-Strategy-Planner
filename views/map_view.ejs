<!DOCTYPE html>
<html lang="en">
  <head>

    <title>Home Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/maps.js"></script>

    <script>window.markers = <%- JSON.stringify(markers); %></script>
    <script>window.markerTypes = <%- JSON.stringify(markerTypes); %></script>


    <link href="/styles/map_view.css" rel="stylesheet" type="text/css">

  </head>

  <body>



    <% include partials/navbar %>
    <% include partials/register %>

    <div id="map" style="width:100%;height:600px;"></div>

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBrLSXiD3Llx4PIBESHzU99vuLeXh_Dfig"></script>

    <% if (email !== undefined) { %>
      <div class="button-container">
        <button type="button" class="btn btn-primary" id="toggle-on">Toggle On</button>
        <button type="button" class="btn btn-warning" id="toggle-off">Toggle Off</button>
        <button type="button" class="btn btn-success" id="new-marker-button">Save</button>
      </div>
    <% } %>
  <a href="http://localhost:8080/"   class="btn btn-default">Return</a>



  <!-- The Modal -->
  <div id="new-marker-modal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
      <h1>New maker</h1>
      <form>
        <div class="form-group">
          <div class="form-group">
            <label for="marker-name">Marker Name</label>
            <input type="text" class="form-control" id="marker-name">
            <label for="marker-description">Description</label>
            <input type="text" class="form-control" id="marker-description">
          </div>


          <label for="marker-type">Type of marker</label>
          <select class="form-control" id="marker-type-select">
            <option>Select a type</option>
          </select>
        </div>

      </form>
      <button type="button" class="btn btn-success submit-button" id="submit-button">Submit</button>
      <button type="button" class="btn btn-default close-button" id="close-button">Cancel</button>
    </div>
    <div id='alert'></div>
  </div>



  </body>
</html>
